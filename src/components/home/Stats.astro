---
const stats = [
  {
    icon: '/img/icons/clients.svg',
    number: '100+',
    label: 'Clients satisfaits'
  },
  {
    icon: '/img/icons/projects.svg',
    number: '50+', 
    label: 'Projets réalisés'
  },
  {
    icon: '/img/icons/support.svg',
    number: '24/7',
    label: 'Support technique'
  }
];
---

<section class="bg-[#00799e] text-white py-16 px-4">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-3 gap-8 text-center">
      {stats.map((stat) => (
        <div class="flex flex-col items-center">
          <img 
            src={stat.icon} 
            alt={stat.label} 
            class="h-16 w-16 mb-4 text-white"
          />
          <p class="text-4xl font-bold mb-2">{stat.number}</p>
          <p class="text-lg">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>