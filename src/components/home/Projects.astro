---
const projects = [
  {
    title: 'Refonte Infrastructure IT',
    client: 'Entreprise Industrielle',
    description: 'Modernisation complète de l\'infrastructure réseau et sécurité.',
    image: '/img/projects/project1.webp',
    tags: ['Réseau', 'Sécurité']
  },
  {
    title: 'Migration Cloud',
    client: 'Startup Technologique',
    description: 'Migration vers une infrastructure cloud sécurisée et performante.',
    image: '/img/projects/project2.webp',
    tags: ['Cloud', 'Transformation']
  },
  {
    title: 'Cybersécurité',
    client: 'Organisme Financier',
    description: 'Audit et renforcement de la sécurité informatique.',
    image: '/img/projects/project3.webp',
    tags: ['Sécurité', 'Audit']
  }
];
---

<section class="py-16 px-4 bg-gray-50">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">
      Nos <span class="text-[#00799e]">Projets</span>
    </h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-all hover:scale-105 hover:shadow-xl">
          <div class="relative">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-48 object-cover"
            />
            <div class="absolute top-4 right-4 flex space-x-2">
              {project.tags.map((tag) => (
                <span class="bg-[#00799e] text-white text-xs px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-500 mb-4">Client: {project.client}</p>
            <p class="text-gray-700">{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>