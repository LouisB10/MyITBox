---
import LanguageSwitcher from './LanguageSwitcher.astro';
---

<header class="fixed w-full bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm z-50">
  <nav class="container mx-auto px-4 py-4" aria-label="Navigation principale">
    <div class="flex items-center justify-between">
      <a href="/" class="focus:outline-none focus:ring-2 focus:ring-blue-500" aria-label="MyITBox - Retour à l'accueil">
        <img 
          src="/logos/myitbox-logo.svg" 
          alt="MyITBox" 
          width="150" 
          height="40"
          class="h-10 w-auto"
        />
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <nav class="flex gap-6" aria-label="Menu principal">
          {[
            { href: '/services', text: 'Services' },
            { href: '/projets', text: 'Projets' },
            { href: '/contact', text: 'Contact' }
          ].map(link => (
            <a 
              href={link.href}
              class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              {link.text}
            </a>
          ))}
        </nav>
        <LanguageSwitcher />
      </div>

      <button 
        type="button"
        class="md:hidden p-2"
        aria-label="Menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="sr-only">Ouvrir le menu</span>
        <!-- Icon sera ajouté plus tard -->
      </button>
    </div>
  </nav>
</header> 